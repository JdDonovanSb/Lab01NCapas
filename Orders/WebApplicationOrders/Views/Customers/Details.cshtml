@model Entities.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<style>
    /* Estilos personalizados */
    .header {
        background-color: #343a40; /* Fondo negro oscuro */
        color: #ffffff;
        padding: 10px;
        border-radius: 4px;
        text-align: center;
        margin-bottom: 20px;
    }

    .info-container {
        background-color: #495057; /* Fondo gris oscuro */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
        color: #ffffff;
    }

    .btn-custom-primary {
        background-color: #007bff; /* Color azul */
        border-color: #007bff;
    }

    .btn-custom-secondary {
        background-color: #6c757d; /* Color gris */
        border-color: #6c757d;
    }

        .btn-custom-primary:hover, .btn-custom-secondary:hover {
            opacity: 0.9; /* Efecto hover */
        }

    .btn i {
        margin-right: 5px; /* Espacio entre icono y texto */
    }
</style>

<h1 class="header">Customer Details</h1>

<div class="info-container">
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-custom-primary"><i class="fas fa-edit"></i> Edit</a>
    <a asp-action="Index" class="btn btn-custom-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
</div>
