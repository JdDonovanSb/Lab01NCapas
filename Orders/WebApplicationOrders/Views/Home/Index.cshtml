@{
    ViewData["Title"] = "Pagina De Inicio";
}

<style>
    body {
        background-color: #2c2c2c; /* Fondo oscuro */
        color: #e0e0e0; /* Texto claro */
    }

    .text-center {
        background-color: #343a40; /* Gris oscuro */
        color: #ffffff; /* Texto blanco */
        padding: 20px;
        border-radius: 10px;
    }

    .carousel {
        border: 2px solid #17a2b8; /* Azul para el borde del carrusel */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.3);
    }

    .carousel-inner img {
        border-radius: 8px;
    }

    .carousel-control-prev,
    .carousel-control-next {
        color: #17a2b8; /* Azul para los controles del carrusel */
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: #343a40; /* Gris oscuro para los íconos del carrusel */
    }
</style>

<div class="text-center">
    <h1 class="display-4">Bienvenidos</h1>
    <p><a href="https://learn.microsoft.com/aspnet/core" style="color: #17a2b8;">Ordenes De Comida</a></p>
</div>

<!-- Carrusel de imágenes -->
<div id="imageCarousel" class="carousel slide mx-auto mt-4" data-bs-ride="carousel" style="max-width: 70%;">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/Orden01.jpg" class="d-block w-100" alt="Biblioteca moderna">
        </div>
        <div class="carousel-item">
            <img src="~/images/orden02.jpg" class="d-block w-100" alt="Estanterías de libros">
        </div>
    </div>
    <a class="carousel-control-prev" href="#imageCarousel" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#imageCarousel" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>
