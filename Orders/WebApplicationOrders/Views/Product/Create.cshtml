@model Entities.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<style>
    body {
        background-color: #2c2c2c; /* Fondo oscuro */
        color: #e0e0e0; /* Texto claro */
        font-family: Arial, sans-serif;
    }

    h1, h4 {
        color: #ffffff; /* Texto blanco para encabezados */
    }

    .container {
        max-width: 800px;
        margin-top: 20px;
        padding: 20px;
        background-color: #343a40; /* Fondo del contenedor oscuro */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.3);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        background-color: #495057; /* Fondo oscuro para inputs */
        color: #e0e0e0; /* Texto claro en inputs */
        border: 1px solid #6c757d; /* Borde gris oscuro */
    }

        .form-control:focus {
            border-color: #17a2b8; /* Color del borde en foco */
            box-shadow: 0 0 0 0.2rem rgba(23, 162, 184, 0.25); /* Sombra del foco */
        }

    .form-check-input {
        background-color: #495057;
        border-color: #6c757d;
    }

    .btn-primary {
        background-color: #17a2b8; /* Color de fondo del botón primario */
        border-color: #17a2b8;
    }

    .btn-secondary {
        background-color: #6c757d; /* Color de fondo del botón secundario */
        border-color: #6c757d;
    }

    .btn-primary, .btn-secondary {
        color: #ffffff; /* Texto blanco en botones */
    }

    .text-danger {
        color: #dc3545; /* Color de texto de errores */
    }
</style>

<div class="container">
    <h1>Create Product</h1>

    <h4>Product</h4>
    <hr />

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="ProductName" class="control-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UnitPrice" class="control-label"></label>
            <input asp-for="UnitPrice" class="form-control" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Package" class="control-label"></label>
            <input asp-for="Package" class="form-control" />
            <span asp-validation-for="Package" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsDiscontinued" class="control-label"></label>
            <input asp-for="IsDiscontinued" type="checkbox" class="form-check-input" />
            <span asp-validation-for="IsDiscontinued" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SupplierId" class="control-label"></label>
            <input asp-for="SupplierId" class="form-control" />
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
