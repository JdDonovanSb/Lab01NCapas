@model Entities.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<style>
    body {
        background-color: #2c2c2c; /* Fondo oscuro */
        color: #e0e0e0; /* Texto claro */
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 800px;
        margin-top: 20px;
        padding: 20px;
        background-color: #343a40; /* Fondo del contenedor oscuro */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.3);
    }

    h1, h4 {
        color: #ffffff; /* Texto blanco para encabezados */
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-control {
        background-color: #495057; /* Fondo del campo de entrada oscuro */
        color: #e0e0e0; /* Texto claro en campos de entrada */
        border: 1px solid #6c757d; /* Borde gris oscuro */
        border-radius: 5px;
    }

        .form-control:focus {
            background-color: #6c757d; /* Fondo más claro al enfocar */
            border-color: #007bff; /* Borde azul claro */
            box-shadow: 0 0 0 .2rem rgba(38, 143, 255, .25);
        }

    .btn-primary {
        background-color: #007bff; /* Color de fondo del botón primario */
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d; /* Color de fondo del botón secundario */
        border-color: #6c757d;
    }

    .btn-primary, .btn-secondary {
        color: #ffffff; /* Texto blanco en botones */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Color de fondo al pasar el ratón sobre el botón primario */
            border-color: #004085;
        }

        .btn-secondary:hover {
            background-color: #5a6268; /* Color de fondo al pasar el ratón sobre el botón secundario */
            border-color: #4e555b;
        }

    .text-danger {
        color: #dc3545; /* Color de texto para mensajes de error */
    }
</style>

<div class="container">
    <h1>Edit Product</h1>

    <h4>Product</h4>
    <hr />

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SupplierId" class="control-label"></label>
                    <input asp-for="SupplierId" class="form-control" />
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>
    
                <div class="form-group">
                    <label asp-for="UnitPrice" class="control-label"></label>
                    <input asp-for="UnitPrice" class="form-control" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>
        
                <div class="form-group">
                    <label asp-for="Package" class="control-label"></label>
                    <input asp-for="Package" class="form-control" />
                    <span asp-validation-for="Package" class="text-danger"></span>
                </div>
        
                <div class="form-group">
                    <label asp-for="IsDiscontinued" class="control-label"></label>
                    <input asp-for="IsDiscontinued" class="form-check-input" />
                    <span asp-validation-for="IsDiscontinued" class="text-danger"></span>
                </div>
        
                <div class="form-group">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
