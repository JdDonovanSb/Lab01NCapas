@model Entities.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<style>
    body {
        background-color: #1e1e1e; /* Fondo oscuro */
        color: #e0e0e0; /* Texto claro */
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #343a40; /* Fondo del contenedor oscuro */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.5);
    }

    h1 {
        color: #ffffff; /* Texto blanco para el encabezado */
    }

    h4 {
        color: #e0e0e0; /* Texto claro para el subtítulo */
    }

    dl dt {
        color: #e0e0e0; /* Etiquetas en texto claro */
        font-weight: bold;
    }

    dl dd {
        color: #ffffff; /* Texto blanco en los valores */
    }

    .btn-danger {
        background-color: #dc3545; /* Color de fondo del botón de eliminar */
        border-color: #dc3545;
        color: #ffffff; /* Texto blanco en botones */
    }

        .btn-danger:hover {
            background-color: #c82333; /* Color de fondo al pasar el ratón sobre el botón de eliminar */
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #6c757d; /* Color de fondo del botón secundario */
        border-color: #6c757d;
        color: #ffffff; /* Texto blanco en botones */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Color de fondo al pasar el ratón sobre el botón secundario */
            border-color: #4e555b;
        }
</style>

<div class="container">
    <h1>Delete Supplier</h1>

    <h4>Supplier</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Company Name
        </dt>
        <dd class="col-sm-10">
            @Model.CompanyName
        </dd>
        <dt class="col-sm-2">
            Contact Name
        </dt>
        <dd class="col-sm-10">
            @Model.ContactName
        </dd>
        <dt class="col-sm-2">
            Contact Title
        </dt>
        <dd class="col-sm-10">
            @Model.ContactTitle
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Model.City
        </dd>
        <dt class="col-sm-2">
            Country
        </dt>
        <dd class="col-sm-10">
            @Model.Country
        </dd>
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Model.Phone
        </dd>
        <dt class="col-sm-2">
            Fax
        </dt>
        <dd class="col-sm-10">
            @Model.Fax
        </dd>
    </dl>

    <form asp-controller="Supplier" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
    </form>
</div>
